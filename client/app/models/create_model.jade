div(ng-include='"components/navbar/navbar.html"')

.container
  .row
    .col-md-3
      left-nav
    .col-md-9
      form.form(name='form', ng-submit='create_model(form)', novalidate='')
        .form-group(ng-class='{ "has-success": form.name.$valid && submitted, "has-error": form.name.$invalid && submitted }')
          label Name
          input.form-control(type='text', name='name', ng-model='model.name', required='')
          p.help-block(ng-show='form.name.$error.required && submitted')
            | A name is required
        div
          button.btn.btn-inverse.btn-lg.btn-login(type='submit')
            | Create model

